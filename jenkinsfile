pipeline {
    agent any
    
    environment {
        DOCKER_COMPOSE_VERSION = '1.29.2'
    }

    stages {
        stage('Build and Start Services') {
            steps {
                script {
                    sh "docker-compose up --build -d"
                }
            }
        }

        stage('View Logs') {
            steps {
                script {
                    sh "docker-compose logs -f"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh "docker-compose exec my_app python svm_service/tests/test_app.py"
                    sh "docker-compose exec my_app python vgg19_service/tests/test_app.py"
                }
            }
        }

        stage('Stop Services') {
            steps {
                script {
                    sh "docker-compose down"
                }
            }
        }
    }

    post {
        always {
            
        }
    }
}
